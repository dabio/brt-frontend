<h2>Nachrichten &amp; Rennberichte</h2>

<div id="news" class="row">

  <div class="twothird">

    <ul>
      <% news.each do |e| %>
        <li>
          <% if e.message.length > 3 %>
            <h4><a class="black" href="<%= e.link %>"><%= e.title %> Â»</a></h4>
          <% else %>
            <h4><%= e.title %></h4>
          <% end %>
          <h4 class="subheader"><%= e.date_formatted %></h4>
          <p><%= e.teaser %></p>
        </li>
      <% end %>
    </ul>

    <%= partial :pagination, { page_count: page_count, url: News.link, page: page } %>

  </div>

  <div class="third">
  </div>

</div>
