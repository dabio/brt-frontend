<% if event %>

  <h3 class="subheader">Datum: <%= event.date_formatted %>, Distanz: <%= event.distance %> km</h3>

  <% if event.participations.count > 0 %>

    <table class="width-100 simple stroked results">

      <thead>
        <tr>
          <th>Ergebnisse</th>
          <th class="right">Ges.</th>
          <th class="right">AK</th>
        </tr>
      </thead>

      <tbody>
        <% event.participations.each do |p| %>
          <tr>
            <td><a class="black" href="<%= p.person.link %>"><%= p.person.name %></a></td>
            <td class="right"><%= p.position_overall %></td>
            <td class="right"><%= p.position_age_class %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

  <% end %>

<% end %>
